<h1>Word: <%= @definition.word.name %></h1>
<h2>Defined as: <%= @definition.defi %> </h2>

<form action="/dictionary/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Redefine Word</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update Definition</button>
</form>

<form action="/dictionary/<%= @definition.word.id %>/definitions/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete Definition</button>
</form>

<a href="/dictionary/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>
